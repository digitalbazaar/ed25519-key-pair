{
  "name": "@digitalbazaar/ed25519-verification-key-2018",
  "version": "0.0.1-rc",
  "description": "A library for generating and working with Ed25519 key pairs, for use with crypto-ld.",
  "homepage": "https://github.com/digitalbazaar/ed25519-verification-key-2018",
  "author": {
    "name": "Digital Bazaar, Inc.",
    "email": "support@digitalbazaar.com",
    "url": "https://digitalbazaar.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digitalbazaar/ed25519-verification-key-2018"
  },
  "bugs": {
    "url": "https://github.com/digitalbazaar/ed25519-verification-key-2018/issues",
    "email": "support@digitalbazaar.com"
  },
  "license": "BSD-3-Clause",
  "main": "src/Ed25519VerificationKey2018.js",
  "files": [
    "src/*.js"
  ],
  "dependencies": {
    "bs58": "^4.0.1",
    "crypto-ld": "digitalbazaar/crypto-ld#extract-key-pairs",
    "node-forge": "^0.9.1",
    "semver": "^7.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/plugin-transform-modules-commonjs": "^7.10.1",
    "@babel/plugin-transform-runtime": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/runtime": "^7.10.3",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "chai-bytes": "^0.1.2",
    "cross-env": "^7.0.2",
    "eslint": "^7.3.0",
    "eslint-config-digitalbazaar": "^2.5.0",
    "eslint-plugin-jsdoc": "^27.1.2",
    "karma": "^5.1.0",
    "karma-babel-preprocessor": "^8.0.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^4.0.2",
    "mocha": "^8.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "multibase": "^1.0.1",
    "multicodec": "^1.0.2",
    "nyc": "^15.1.0",
    "webpack": "^4.43.0"
  },
  "nyc": {
    "exclude": [
      "tests"
    ],
    "reporter": [
      "html",
      "text-summary"
    ]
  },
  "browser": {
    "bs58": false,
    "crypto": false,
    "util": false,
    "semver": false,
    "./src/ed25519PublicKeyNode12.js": false,
    "./src/ed25519PrivateKeyNode12.js": false
  },
  "engines": {
    "node": ">=12"
  },
  "keywords": [
    "Decentralized",
    "DID",
    "Credential",
    "Cryptography",
    "Linked Data"
  ],
  "scripts": {
    "test": "npm run test-node",
    "test-node": "cross-env NODE_ENV=test mocha --preserve-symlinks -t 30000 -A -R ${REPORTER:-spec} tests/*.spec.js",
    "test-karma": "karma start",
    "benchmark": "node benchmark/benchmark.js",
    "coverage": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text-summary npm run test-node",
    "coverage-ci": "cross-env NODE_ENV=test nyc --reporter=text-lcov npm run test-node > coverage.lcov",
    "coverage-report": "nyc report",
    "lint": "eslint ."
  }
}
